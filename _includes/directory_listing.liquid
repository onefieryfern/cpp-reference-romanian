{% for site_page in site.pages %}
  {% unless site_page.url == page.url %}

    {% comment %}
      List pages in current folder, except for the index in "/".
    {% endcomment %}

    {% unless page.dir == "/" %}
      {% if site_page.dir == page.dir %}

[{{ site_page.title }}]({{ site_page.url | absolute_url }}) <br>

      {% endif %}
    {% endunless %}

    {% comment %}
      List folders in current folder.
    {% endcomment %}

    {% if site_page.dir contains page.dir and site_page.name == "index.md" %}

[{{ site_page.title }}]({{ site_page.url | absolute_url }}) <br>

    {% endif %}

  {% endunless %}
{% endfor %}